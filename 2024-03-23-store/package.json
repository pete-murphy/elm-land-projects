    "@tailwindcss/typography": "^0.5.10",
    "@types/tailwindcss": "^3.1.0",
    "autoprefixer": "^10.4.19",
    "msw": "^2.2.10",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@github/relative-time-element": "^4.3.1",
    "elm-watch": "^2.0.0-beta.2"
  },
  "msw": {
