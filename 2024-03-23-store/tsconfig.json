{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "moduleResolution": "node",

    "strict": true,
    "noUncheckedIndexedAccess": true,

    "noEmit": true,
    "rootDir": "."
  },
  "include": ["mock/**/*.ts", "src/**/*.ts"]
}
